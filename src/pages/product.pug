extends wordoutet

include ./blocks/product-list
include ./blocks/banner
include ./blocks/categories

block title
    title product

block content
    .product-container
        .container-fluid
            .row.product-section
                .col-lg-6.prod-left
                    .hero-image
                        img.img.wow.fadeInUp(data-wow-delay="0.4s" src="./assets/img/hero.jpg" alt='notepad')

                .col-lg-6.prod-right
                    .prod-opt
                        h3.wow.fadeInUp#prod-name Daily Planner 2018/19
                        p.fadeInUp#price(data-wow-delay="0.5s") USD $30
                        form.input-row
                            input(type="radio" id="radio-input-1" name="radio1" checked)
                            label.input-helper.input-helper-radio.wow.fadeInUp(data-wow-delay="0.6s" for="radio-input-1") add monogram (+$10.00)
                            br
                            input(type="radio" id="radio-input-2"  name="radio1")
                            label.input-helper.input-helper-radio.wow.fadeInUp(data-wow-delay="0.7s" for="radio-input-2") add gift wrap (+$10.00)
                        br
                        input.wow.fadeInUp(data-wow-delay="0.8s" type="number" placeholder="QTY")
                        input.wow.fadeInUp(data-wow-delay="1s" type="number" placeholder="SIZE")

                        .add-prod.wow.fadeInUp(data-wow-delay="1.1s")
                            a(href="#") Add to bag
    +categories
    .whitespaces
